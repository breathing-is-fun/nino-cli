{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es7"],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist"
  },
  "exclude": ["dist", "tests", "test-case"],
  "typings": "./typings.d.ts"
}
